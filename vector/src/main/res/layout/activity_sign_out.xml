<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="im.vector.activity.signout.SignOutActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/VectorToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sign_out_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:drawableTop="@drawable/alert_triangle"
                android:drawablePadding="32dp"
                android:text="@string/sign_out_activity_warning"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sign_out_backup_title"
                style="@style/ListHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/sign_out_activity_backup_title"
                app:layout_constraintTop_toBottomOf="@+id/sign_out_warning" />

            <TextView
                android:id="@+id/sign_out_backup_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/sign_out_activity_backup_status_no_backup"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/sign_out_backup_status_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_out_backup_title" />

            <ImageView
                android:id="@+id/sign_out_backup_status_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/sign_out_backup_status"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/sign_out_backup_status"
                tools:srcCompat="@drawable/unit_test_ko" />

            <ProgressBar
                android:id="@+id/sign_out_backup_status_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/sign_out_backup_status"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/sign_out_backup_status" />

            <Button
                android:id="@+id/sign_out_backup_start"
                style="@style/LoginButtonStyle"
                android:layout_margin="16dp"
                android:text="@string/sign_out_activity_backup_manage_backup"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_out_backup_status"
                tools:visibility="visible" />

            <android.support.constraint.Group
                android:id="@+id/sign_out_export_file_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="sign_out_export_file_title,sign_out_export_file_prompt,sign_out_export_file" />

            <TextView
                android:id="@+id/sign_out_export_file_title"
                style="@style/ListHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/sign_out_activity_export_to_file_title"
                app:layout_constraintTop_toBottomOf="@+id/sign_out_backup_start" />

            <TextView
                android:id="@+id/sign_out_export_file_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/sign_out_activity_export_to_file"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/sign_out_export_file_title" />

            <Button
                android:id="@+id/sign_out_export_file"
                style="@style/LoginButtonStyle"
                android:layout_margin="16dp"
                android:text="@string/sign_out_activity_export_to_file_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_out_export_file_prompt" />

            <TextView
                android:id="@+id/sign_out_sign_out_title"
                style="@style/ListHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/logout"
                app:layout_constraintTop_toBottomOf="@+id/sign_out_export_file" />

            <TextView
                android:id="@+id/sign_out_sign_out_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/sign_out_activity_sign_out_warning"
                app:layout_constraintTop_toBottomOf="@+id/sign_out_sign_out_title" />

            <Button
                android:id="@+id/sign_out_sign_out"
                style="@style/LoginButtonStyle"
                android:layout_margin="16dp"
                android:text="@string/logout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_out_sign_out_info"
                tools:background="@color/vector_warning_color" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <include
        android:id="@+id/waiting_view"
        layout="@layout/progress_bar_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>

